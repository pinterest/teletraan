<div class="modal fade" id="viewDeployConstraintModalId" tabindex="-1" role="dialog"
    aria-labelledby="viewDeployConstraintModalLabel" aria-hidden="true">
     <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="form-horizontal" method="post" action="/env/{{ envName }}/{{ stageName }}/edit_constraint"
                  role="form">
                {% csrf_token %}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span
                            aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="viewDeployConstraintModalLabel">Current deploy constraint</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="tag_name" class="col-md-2 control-label">Tag Name</label>
                        <div class="col-md-10">
                            <input class="form-control" name="tag_name" value="{{ tag_name }}" readonly>
                        </div>
                        <label for="constraint_type" class="col-md-2 control-label" title="Deploy constraint type ">
                                Constraint Type
                        </label>
                        <div class="col-md-10">
                            <select class="form-control" name="constraint_type">
                                {% for type in constraintTypes %}
                                    {% if type == constraint_type %}
                                    <option value="{{ type }}" selected="selected">{{ type }}</option>
                                    {% else %}
                                    <option value="{{ type }}">{{ type }}</option>
                                    {% endif %}>
                                {% endfor %}
                            </select>
                        </div>
                        <label for="max_parallel" class="col-md-2 control-label">Max Parallel Number of Hosts</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="max_parallel"
                                   required="required"
                                   placeholder="mutually exclusive deploy with tag {{ tag_name }}"
                                   data-toggle="tooltip"
                                   data-placement="right"
                                   data-trigger="manual"
                                   title="numbers only." value="{{ max_parallel }}">
                            <small>Note: This number MUST be smaller than <a href="/env/{{ envName }}/{{ stageName }}/config" target="_blank">config/max_parallel_hosts</a> otherwise your deployment may not work</small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                </div>
             </form>
        </div>
    </div>
</div>

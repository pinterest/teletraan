{% load utils %}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Create Auto Scaling Group</h4>
</div>
<form id="asgEnableFormId" method="post" class="form-horizontal" role="form" action="/groups/{{ group_name }}/create_asg/">
<div class="modal-body">
      <input type="hidden" name="groupName" value="{{ group_name }}" />
      <div class="modal-body" id="newMetricModal">

          <div class="form-group">
            <label for="minSize" class="deployToolTip control-label col-xs-4"
                data-toggle="tooltip"
                title="minimum number of hosts in one autoscaling group">
                Min Size
            </label>
            <div class="col-xs-6">
                <input class="form-control" name="min_size" required="true" id="minSizeInput"
                       type="text" value="{{ asg.minSize }}" placeholder="usually the minimum number of instances in the group."/>
            </div>
          </div>

          <div id="minSizeWarningDivId" class="hidden">
            <div class="form-group">
              <label class="control-label col-xs-4"></label>
              <div class="col-xs-8">
                <h4><span class="label label-danger">Minimum size is too low for your group!</span></h4>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="maxSize" class="deployToolTip control-label col-xs-4"
                data-toggle="tooltip"
                title="maximum number of hosts in one autoscaling group">
                Max Size
            </label>

            <div class="col-xs-6">
                <input class="form-control" name="max_size" required="true"
                       type="text" value="{{ asg.maxSize }}" placeholder="usually the maximum number of instances in the group."/>
            </div>
          </div>

          <div class="form-group">
            <label for="terminationPolicy" class="deployToolTip control-label col-xs-4"
                data-toggle="tooltip"
                title="The instance termination policy">
             Termination Policy
             </label>
             <div class="col-xs-6">
             <select class="form-control" name="terminationPolicy">
             {% for policy in policies %}
                 {% if policy == "Default" %}
                 <option value="{{policy}}" selected>{{policy}}</option>
                 {% else %}
                 <option value="{{policy}}">{{policy}}</option>
                 {% endif %}
             {% endfor %}
             </select>
             </div>
          </div>

          <div class="form-group">
             <label for="attachInstance" class="deployToolTip control-label col-xs-9">Attach Existing Instance(s) to the group&nbsp;
             <input type="checkbox" id="attach_instance" name="attach_instances">
             </label>
          </div>
          <div id="warning-message-id" class="form-group hidden">
          <div class="col-xs-12 bg-danger">
           Auto scaling group may terminate some existing instances and launch new instances to balance the number of instances in different AZs.
           </div>
          </div>

      </div>
 </div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
  <button type="submit" class="btn btn-primary">Enable</button>
</div>
{% csrf_token %}
</form>
<script>
  $(function() {
    $(".chosen-select").chosen({"width": "100%"});
    $("#attach_instance").change(function() {
        if ($("#attach_instance:checked").length > 0) {
            $("#warning-message-id").removeClass("hidden");
        } else {
            $("#warning-message-id").addClass("hidden");
        }
    });
  });
</script>
